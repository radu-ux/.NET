<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniversityDorms.pages.DormPage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="DormPageTitle"
                   TextColor="DarkBlue"
                   FontAttributes="Bold"
                   FontSize="Large"
                   HorizontalTextAlignment="Center" />
            <Label x:Name="DormLocation"
                   FontSize="Medium"
                   Padding="10"/>
            <Label x:Name="NrOfRooms"
                   FontSize="Medium"
                   Padding="10"/>
            <Label x:Name="NrOfFloors"
                   FontSize="Medium"
                   Padding="10"/>
            <Label x:Name="StudentPerRoom"
                   FontSize="Medium"
                   Padding="10"/>
            <Label x:Name="PricePerMonth"
                   FontSize="Medium"
                   Padding="10"/>
            <Button ClassId="ReserverDorm"
                    Text="Reserve place"
                    Clicked="reserveButtonClicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>